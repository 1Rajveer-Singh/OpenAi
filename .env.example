# VyapaarGPT Environment Variables for Vercel

# Application Settings
APP_NAME=VyapaarGPT
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-Powered Business OS for India

# API Settings
API_PREFIX=/api
CORS_ORIGINS=*

# Database Settings (For future use)
# DATABASE_URL=

# External API Keys (Add your actual keys in Vercel dashboard)
# OPENAI_API_KEY=
# SPEECH_API_KEY=
# SMS_API_KEY=
# WHATSAPP_API_KEY=

# Business Settings
DEFAULT_CURRENCY=INR
DEFAULT_LANGUAGE=hi
DEFAULT_TIMEZONE=Asia/Kolkata

# Feature Flags
ENABLE_VOICE_INTERFACE=true
ENABLE_AI_AGENTS=true
ENABLE_MARKETPLACE_SYNC=true
ENABLE_ANALYTICS=true

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Indian Business Compliance
GST_ENABLED=true
UPI_ENABLED=true
HINDI_SUPPORT=true
# VyapaarGPT Backend Environment Configuration
# Demo/Development Configuration

# Application Settings
APP_NAME=VyapaarGPT
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=vyapaargpt-demo-secret-key-change-in-production
HOST=0.0.0.0
PORT=8000

# Database Configuration (SQLite for demo)
DATABASE_URL=sqlite:///./vyapaargpt_demo.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./vyapaargpt_demo.db

# Security & Encryption
ENCRYPTION_KEY=demo-encryption-key-base64-encoded
PASSWORD_SALT=vyapaargpt_demo_salt
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration (DEMO - Replace with your key)
OPENAI_API_KEY=sk-demo-key-replace-with-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
WHISPER_MODEL=whisper-1

# Language & Localization
VOICE_LANGUAGES=hi,te,ta,bn,gu,mr,kn,en
DEFAULT_LANGUAGE=hindi
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Demo Mode Settings
DEMO_MODE=true
ENABLE_DATA_ENCRYPTION=false
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000